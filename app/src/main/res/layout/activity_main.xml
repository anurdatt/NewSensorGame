<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:aapt="http://schemas.android.com/aapt" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="35dp" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Accelerometer Game" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="32dp" android:textColor="#ff7aff24" android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Anuran Datta" android:layout_below="@+id/textView2" android:layout_centerHorizontal="true"/>
    <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start" android:layout_below="@+id/editText" android:layout_centerHorizontal="true" android:onClick="okButtonClicked"/>
    <Button android:id="@+id/button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Options" android:layout_alignLeft="@+id/editText" android:layout_alignParentBottom="true" android:layout_alignStart="@+id/editText"/>
    <EditText android:textColorHighlight="#ff7eff15" android:textColorHint="#ffff25e6" android:id="@+id/editText" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="42dp" android:hint="Enter your Name" android:singleLine="true" android:layout_below="@+id/imageView" android:layout_alignLeft="@+id/imageView" android:layout_alignRight="@+id/imageView" android:textAllCaps="true" android:layout_alignStart="@+id/imageView" android:layout_alignEnd="@+id/imageView"/>
    <ImageView android:id="@+id/imageView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/billiards" android:layout_below="@+id/textView" android:layout_centerHorizontal="true"/>
    <Button android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Scores" android:layout_alignTop="@+id/button" android:layout_alignRight="@+id/editText" android:layout_alignEnd="@+id/editText"/>
    <TextView android:textSize="25dp" android:textColor="#2196f3" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="By" android:layout_below="@+id/textView1" android:layout_centerHorizontal="true"/>
</RelativeLayout>
